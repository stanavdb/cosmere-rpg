{
    "id": "cosmere-rpg",
    "title": "Cosmere Roleplaying Game",
    "description": "A community-developed system for playing the Cosmere Roleplaying Game, by Dragonsteel Entertainment and Brotherwise Games.",
    "version": "0.2.1",
    "compatibility": {
        "minimum": "12",
        "verified": "12"
    },
    "authors": [
        {
            "name": "The Metalworks",
            "url": "https://github.com/the-metalworks"
        }
    ],
    "esmodules": ["index.js"],
    "styles": ["output.css"],
    "documentTypes": {
        "Actor": {
            "character": {},
            "adversary": {}
        },
        "Item": {
            "weapon": {},
            "armor": {},
            "equipment": {},
            "loot": {},

            "ancestry": {},
            "culture": {},
            "path": {},
            "specialty": {},
            "talent": {},
            "trait": {},

            "action": {},

            "injury": {},
            "connection": {},
            "goal": {},

            "power": {},

            "talent_tree": {}
        }
    },
    "packs": [
        {
            "name": "tables",
            "label": "Roll Tables",
            "system": "cosmere-rpg",
            "path": "packs/tables",
            "type": "RollTable",
            "private": false
        }
    ],
    "languages": [
        {
            "lang": "en",
            "name": "English",
            "path": "lang/en.json"
        }
    ],
    "socket": true,
    "grid": {
        "distance": 5,
        "units": "ft"
    },
    "url": "https://github.com/the-metalworks/cosmere-rpg",
    "manifest": "https://raw.githubusercontent.com/the-metalworks/cosmere-rpg/main/src/system.json",
    "download": "https://github.com/the-metalworks/cosmere-rpg/releases/download/release-0.2.1/cosmere-rpg-release-0.2.1.zip"
}
