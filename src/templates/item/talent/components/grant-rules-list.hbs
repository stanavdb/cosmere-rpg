<ul class="list-table">
    <li class="rule header">
        <div class="col type">
            <span>{{localize systemFields.grantRules.model.fields.type.label}}</span>
        </div>
        <div class="col description">
            <span>{{localize "COSMERE.Item.Sheet.Talent.GrantRules.Description"}}</span>
        </div>
        <div class="col controls flexrow">
            {{#if editable}}
            <div></div>
            <a data-action="create-rule" 
                data-tooltip="COSMERE.Item.Sheet.Talent.GrantRules.Create"
            >
                <i class="fa-solid fa-plus"></i>
            </a>
            {{/if}}
        </div>
    </li>

    {{#each rules as |rule|}}
    <li class="rule" data-id="{{rule._id}}">
        <div class="col type">
            <span>{{localize rule.typeLabel}}</span>
        </div>
        <div class="col description">
            {{#if (eq rule.type "items")}}
                {{#each rule.items as |item|}}
                    {{{item.link}}}
                    {{#if (not @last)}}
                        <span>,</span>
                    {{/if}}
                {{/each}}
            {{/if}}
        </div>
        <div class="col controls flexrow">
            {{#if @root.editable}}
            <a data-action="edit-rule" 
                data-tooltip="COSMERE.Item.Sheet.Talent.GrantRules.Edit"
            >
                <i class="fa-solid fa-pen-to-square"></i>
            </a>
            <a data-action="delete-rule" 
                data-tooltip="COSMERE.Item.Sheet.Talent.GrantRules.Delete"
            >
                <i class="fa-solid fa-trash"></i>
            </a>
            {{/if}}
        </div>
    </li>
    {{/each}}
</ul>