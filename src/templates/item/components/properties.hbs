{{#if hasProperties}}
<div class="properties-list">
    {{!-- Physical properties --}}
    {{#if isPhysical}}
    <div class="form-group quantity">
        <label>{{localize "COSMERE.Item.Sheet.Properties.Quantity"}}</label>
        <input name="system.quantity"
            type="number"
            min="0"
            step="1"
            value="{{item.system.quantity}}"
            {{#if (not editable)}}
            readonly
            {{/if}}
        >
    </div>
    <div class="form-group weight">
        <label>{{localize "COSMERE.Item.Sheet.Properties.Weight"}}</label>
        <input name="system.weight.value"
            type="number"
            min="0"
            step="0.01"
            value="{{item.system.weight.value}}"
            {{#if (not editable)}}
            readonly
            {{/if}}
        >
        <select name="system.weight.unit"
            {{#if (not editable)}}
            disabled
            {{/if}}
        >
            {{selectOptions units.weight selected=item.system.weight.unit}}
        </select>
    </div>
    <div class="form-group price">
        <label>{{localize "COSMERE.Item.Sheet.Properties.Price"}}</label>
        <input name="system.price.value"
            type="number"
            min="0"
            step="0.01"
            value="{{item.system.price.value}}"
            {{#if (not editable)}}
            readonly
            {{/if}}
        >
        <select name="system.price.unit"
            {{#if (not editable)}}
            disabled
            {{/if}}
        >
            {{selectOptions units.price selected=item.system.price.unit}}
        </select>
    </div>
    {{/if}}
</div>
{{/if}}