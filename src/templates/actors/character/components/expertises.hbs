<div class="header">
    <div class="title">
        <i class="fa-solid fa-book"></i>
        <span>{{localize "COSMERE.Actor.Sheet.Expertises"}}</span>
    </div>
    <div class="controls">
        <a role="button"
            data-action="edit-expertises"
            data-tooltip="Edit expertises"
        >
            <i class="fa-solid fa-pen-to-square"></i>
        </a>
    </div>
</div>
<div class="expertises">
    {{#each expertises as |expertise|}}
    <div class="expertise" data-id="{{expertise.id}}">
        <span class="name">{{expertise.label}}</span>
        <span class="type">({{localize expertise.typeLabel}})</span>
    </div>
    {{/each}}
</div>