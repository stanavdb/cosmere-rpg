{{#if hasActiveSkills}}

<ul class="skill-list">
    {{#each skills as |skill|}}
    {{#if skill.active}}

    <li class="skill" data-id="{{skill.id}}">
        {{app-actor-skill 
            skill=skill.id 
            readonly=(not @root.isEditMode)
            pips=false
        }}
    </li>

    {{/if}}
    {{/each}}
</ul>

{{/if}}